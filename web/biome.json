{
	"$schema": "https://biomejs.dev/schemas/2.3.8/schema.json",
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": false
	},
	"files": {
		"ignoreUnknown": false,
		"includes": [
			"**",
			"!**/dist",
			"!**/node_modules",
			"!**/build",
			"!**/.next",
			"!**/coverage",
			"!**/*.min.js",
			"!**/*.bundle.js"
		],
		"maxSize": 10485760
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"indentWidth": 2,
		"lineWidth": 100,
		"formatWithErrors": false
	},
	"assist": { "actions": { "source": { "organizeImports": "on" } } },
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
	"javascript": {
		"formatter": {
			"enabled": true,
			"quoteStyle": "double",
			"jsxQuoteStyle": "double",
			"trailingCommas": "all",
			"semicolons": "always",
			"arrowParentheses": "always",
			"indentStyle": "tab",
			"indentWidth": 2
		}
	},
	"css": {
		"parser": {
			"cssModules": false,
			"allowWrongLineComments": true
		},
		"formatter": {
			"enabled": true,
			"indentStyle": "tab",
			"indentWidth": 2,
			"lineWidth": 100,
			"quoteStyle": "double"
		}
	},
	"overrides": [
		{
			"includes": ["**/index.css", "**/*.css"],
			"css": {
				"parser": {
					"cssModules": false,
					"allowWrongLineComments": true
				}
			},
			"formatter": {
				"enabled": false
			}
		}
	]
}
